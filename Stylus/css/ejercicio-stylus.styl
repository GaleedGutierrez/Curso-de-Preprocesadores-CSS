Fuente1 = "Lato", sans-serif
Fuente2 = "Oswald", sans-serif
Color-primario = #333333
Color-secundario = #8841da
Color-claro = #ffffff


* 
    margin: 0
    padding: 0
    box-sizing: border-box
    text-decoration: none
    list-style: none


html 
    font-size: 62.5%
    font-family: Fuente1
    color: Color-primario

.buscador
    width: 100%
    height: 25rem
    padding: 10rem
    background: url("../images/cover.jpg") no-repeat center
    background-size: cover
    &__input 
        width: 75%
        height: 6rem
        padding: 2rem
        font-size: 2.5rem
        border: none
        border-radius: 3rem
        outline: none

.encabezado--con-filtros
    display: flex
    width: 90%
    margin: 0 auto
    padding: 3rem
    h2 
        margin-top: 1rem
        font-family: Fuente2
        font-size: 5rem
        font-weight: 500
        text-transform: uppercase
    .filtros
        width: 25rem
        height: 7.5rem
        padding: 2rem
        margin-left: auto
        span
            font-family: Fuente2
            text-transform: uppercase
        a 
            margin-left: 2rem
            font-size: 2.5rem




