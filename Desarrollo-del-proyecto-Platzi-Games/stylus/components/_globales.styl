Fuente1 = "Lato", sans-serif
Fuente2 = "Oswald", sans-serif
Color-primario = #333333
Color-secundario = #8841da
Color-claro = #ffffff

contenedor()
    display: flex
    flex-wrap: wrap
    width: 96%
    margin: 0 auto

caja-sombra()
    background-color: Color-claro
    box-shadow: 0 2rem 3.3rem 0  rgba(0, 0, 0, 0.2)

todo-al-centro()
    display: flex
    justify-content: center
    align-items: center

opacidad(color,cantidad) 
    alpha(color,cantidad)

titulos(fuente)
    if fuente == Fuente1
        font-family: Fuente1
    else
        font-family: Fuente2
        font-weight: 600
        text-transform: uppercase


for header in (3..1)
    h{header}
        font-size: 3.5rem - (5*header)


* 
    margin: 0
    padding: 0
    box-sizing: border-box
    text-decoration: none
    list-style: none

html 
    font-size: 62.5%

body 
    font-size: 1.6rem
    color: Color-primario
    titulos(Fuente1)

img
    width: 100%